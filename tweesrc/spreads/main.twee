<% window.addEventListener('load', function() {
    if ($("#shufBtn")){
        $("#shufBtn").click(() => {
            $("#cardBack").toggleClass("shuffle");
                
            if(freshDeck){
                freshDeck = false;
                deck = []; 
                getDeck();                     
                $("#cardBack").width("20%");
                $("#cardback").css("text-align:left");
                $("#drawCard").toggle();
                $("#spreadSelection").toggle();
                $("#reset").toggle();
            }
            
            shuffle();
            
            setTimeout(() => {
                $("#cardBack").toggleClass("shuffle");
            }, 1001);
            console.log(deck);
        });
    };
}); %>